<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/nutrition_category_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/nutrition_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nutrition_category_arrow"
        android:layout_centerVertical="true"
        android:textColor="@color/colorImportantText"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:text="GROUP TEST"/>

    <TextView
        android:id="@+id/nutrition_category_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/nutrition_category_slash"
        android:layout_alignBottom="@id/nutrition_category_name"
        android:text="50"/>

    <TextView
        android:id="@+id/nutrition_category_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/nutrition_category_goal"
        android:layout_alignBottom="@id/nutrition_category_name"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="/"/>

    <TextView
        android:id="@+id/nutrition_category_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="16dp"
        android:layout_alignBottom="@id/nutrition_category_name"
        android:text="420"/>

</RelativeLayout>