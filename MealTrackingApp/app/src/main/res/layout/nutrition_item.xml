<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/nutrition_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorImportantText"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:text="ITEM TEST"/>

    <TextView
        android:id="@+id/nutrition_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/nutrition_item_slash"
        android:layout_alignBottom="@id/nutrition_item_name"
        android:text="100"/>

    <TextView
        android:id="@+id/nutrition_item_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/nutrition_item_goal"
        android:layout_alignBottom="@id/nutrition_item_name"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="/"/>

    <TextView
        android:id="@+id/nutrition_item_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="16dp"
        android:layout_alignBottom="@id/nutrition_item_name"
        android:text="500"/>

</RelativeLayout>